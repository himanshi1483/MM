@model Mahamesh.Models.MediaGalleryModel

@{
    ViewBag.Title = "Index";
}
<style>
    .mu-title {
        padding-top: 5px;
        background: border-box #37C190;
        border: 1px solid #37C190;
        color: #fff;
        border-radius: 3px;
    }

    .container{
        padding-left:0px !important;
    }
</style>
<div class="container body-content" id="#maincontent">
    <div class="mu-title">
        <h4>Video Gallery</h4>
    </div>
    <section id="mu-gallery" style="padding: 20px 0px;;margin-bottom:10%">
        @*<div style="float:right">
            <a class="btn btn-info" href="@Url.Action("Create")">Add Videos</a>
        </div>*@
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                   
                    <div class="mu-gallery-area">
                      
                        <!-- end title -->
                        <!-- start gallery content -->
                        <div class="mu-gallery-content">
                            <!-- Start gallery menu -->
                            @*<div class="mu-gallery-top">
                                    <ul>
                                        <li class="filter active" data-filter="all">All</li>
                                        <li class="filter" data-filter=".lab">Lab</li>
                                        <li class="filter" data-filter=".classroom">Class Room</li>
                                        <li class="filter" data-filter=".library">Library</li>
                                        <li class="filter" data-filter=".cafe">Cafe</li>
                                        <li class="filter" data-filter=".others">Others</li>
                                    </ul>
                                </div>*@
                            <!-- End gallery menu -->

                            <div class="mu-gallery-body">
                                <ul id="mixit-container" class="row">
                                    <!-- start single gallery image -->
                                    @foreach (var item in Model.MediaList)
                                    {
                                        <li class="col-md-4 col-sm-6 col-xs-12 mix lab">
                                            <div class="mu-single-gallery">
                                                <div class="mu-single-gallery-item">
                                                    <div class="mu-single-gallery-img">
                                                        <div class="video-frame">
                                                            <video style="width:100%; height:auto;" controls>
                                                                <source src="@Url.Content(@item.MediaLocation)" type="video/mp4" />
                                                            </video>
                                                        </div>
                                                    </div>
                                                    <div class="mu-single-gallery-info">
                                                        <div class="mu-single-gallery-info-inner">
                                                            <h4>@item.MediaName</h4>
                                                            <p>@item.Caption</p>
                                                            <a href="@item.MediaLocation" data-fancybox-group="gallery" class="fancybox"><span class="fa fa-eye"></span></a>
                                                            @if (User.Identity.IsAuthenticated)
                                                            {
                                                                using (Html.BeginForm("Delete", "Media", new { @id = item.MediaId }, FormMethod.Post))
                                                                {
                                                                    @Html.AntiForgeryToken()
                                                                    <div class="form-actions">
                                                                        <button type="submit" onclick="return confirm('Are you sure you wish to delete this video?');" value="Delete" class="btn-info aa-link" style="padding:13px;background-color:#01bafd;box-shadow:none"><span class="fa fa-remove"></span></button>

                                                                    </div>
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- end gallery content -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
