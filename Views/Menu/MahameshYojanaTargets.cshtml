
@{
    ViewBag.Title = "Physical and Financial Target";
}

<style>
    .lbl {
        top: 8px;
        font-size: 15px;
        text-align: center;
    }
</style>
<div class="container body-content" id="#maincontent" style="margin-bottom: 150px;">
    <div class="headerDashboard">
        <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11 headerText">
            <h2>राजे यशवंतराव होळकर महामेष योजना</h2>
        </div>
        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1" style="text-align:right">
            <img src="~/Images/Raje.jpg" class="img-responsive" alt="Raje Yashwant Holkar" />
        </div>

    </div>
    <div class="panel panel-primary-2" style="box-shadow: 0 2px 2px rgba(0,0,0,.3);">
        <div class="panel-heading panel-primary-2">
            <h5 class="text-center">Physical and Financial Target</h5>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-lg-6">
                    <label for="Comp" class="col-sm-2 control-label lbl">प्रपत्र:</label>
                    <select class="form-control col-sm-10" style="width:75%" name="select1" id="Component">
                        <option value="0">
                            ----
                        </option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                    </select>

                </div>
                <div class=" form-group col-lg-6">
                    <label for="district" class="col-sm-2 control-label lbl">जिल्हा:</label>
                    <div class="col-sm-10">
                        @Html.DropDownList("Dist", (SelectList)ViewBag.Dist, "Select", new { @class = "form-control" })

                    </div>
                </div>
            </div>
            <div class="row">

                <div class="form-group col-xs-6">
                    <label for="Comp" class="col-sm-2 control-label lbl">तालुका:</label>
                    <div class="col-sm-10" style="width:75%">
                        @Html.DropDownList("Tahashil", new SelectList(string.Empty, "Value", "Text"), new { @class = "form-control" })

                    </div>
                </div>
            </div>
            <div class="row text-center">
                <button class="btn btn-primary" id="btnShow" type="submit">Show</button>
            </div>
        </div>
        <div class="panel-body">
            <table id="dTable" class="table table-bordered table-striped table-responsive"></table>
        </div>
    </div>
</div>
<script src="/Content/Varsity/assets/js/jquery.min.js" type="text/javascript"></script>

<script>
    $("#Component").change(function ()
    {
            //alert($("#Component").val());
    });

    $("#btnShow").click(function () {
        var comp = $("#Component").val();
        var district = $("#Dist option:selected").text();
        var taluka = $("#Tahashil option:selected").text();
        alert(comp);
        alert(district);
        alert(taluka);
          $.ajax({
                type: 'POST',
                url: '@Url.Action("showTable")',
                dataType: 'json',
                data: { id: $("#Dist").val() },
                success: function (city) {
                    //alert(city);
                    $.each(city, function (i, city) {
                        $("#Tahashil").append('<option value="'
                            + city.Value + '">'
                            + city.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
    });


       $("#Dist").change(function () {
            $("#Tahashil").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getTaluka")',
                dataType: 'json',
                data: { id: $("#Dist").val() },
                success: function (city) {
                    //alert(city);
                    $.each(city, function (i, city) {
                        $("#Tahashil").append('<option value="'
                            + city.Value + '">'
                            + city.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
            });
            return false;
    });


</script>
