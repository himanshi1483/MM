@model Mahamesh.Models.AdminPanelViewModel
@{
    ViewBag.Title = "AdminPanel";
}

<div class="container body-content" id="#maincontent" style="margin-top:100px; margin-bottom: 150px;">
    <div class="panel panel-primary-2" style="box-shadow: 0 2px 2px rgba(0,0,0,.3);">
        <div class="panel-heading panel-primary-2 text-center">
            <h3 class="panel-title">Admin Panel</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <ul class="vertical-nav">

                        <li><a href="@Url.Action("ProductsAtFarm", "Menu")">Send Messages</a></li>
                        <li><a href="@Url.Action("ProductsWool", "Menu")">View Registration</a></li>
                        <li>
                            <a href="#">Upload Files</a>
                            <ul class="sub-menu">
                                <li><a href="#" id="tenderLink">Tenders</a></li>
                                <li><a href="#" id="newsLink">News</a></li>
                                <li><a href="#" id="pressLink">Press Information</a></li>
                                <li><a href="#" id="imageUploadLink">Images</a></li>
                                <li><a href="#" id="videoUploadLink">Videos</a></li>
                            </ul>
                        </li>
                        <li><a href="#" id="feedbackLink">Check Feedbacks</a></li>
                        <li><a href="#" id="imageLink">Create Image Folders</a></li>
                        <li><a href="#" id="videoLink">Create Video Folders</a></li>
                    </ul>
                </div>
                <div class="col-md-9">
                    @Html.Partial("_FileIndex")
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/Content/Varsity/assets/js/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#tenderLink").click(function () {
            $("#tenderBlock").toggle();
            $("#newsBlock").hide();
            $("#pressBlock").hide();
            $("#feedbackBlock").hide();
            $("#imageBlock").hide();
            $("#videoBlock").hide();
            $("#imageUploadBlock").hide();
            $("#videoUploadBlock").hide();
        });
        $("#newsLink").click(function () {
            $("#newsBlock").toggle();
            $("#pressBlock").hide();
            $("#tenderBlock").hide();
            $("#feedbackBlock").hide();
            $("#imageBlock").hide();
            $("#videoBlock").hide();
            $("#imageUploadBlock").hide();
            $("#videoUploadBlock").hide();
        });
        $("#pressLink").click(function () {
            $("#pressBlock").toggle();
            $("#newsBlock").hide();
            $("#tenderBlock").hide();
            $("#feedbackBlock").hide();
            $("#imageBlock").hide();
            $("#videoBlock").hide();
            $("#imageUploadBlock").hide();
            $("#videoUploadBlock").hide();
        });
        $("#feedbackLink").click(function () {
            $("#pressBlock").hide();
            $("#newsBlock").hide();
            $("#tenderBlock").hide();
            $("#feedbackBlock").toggle();
            $("#imageBlock").hide();
            $("#videoBlock").hide();
            $("#imageUploadBlock").hide();
            $("#videoUploadBlock").hide();
        });
        $("#imageLink").click(function () {
            $("#pressBlock").hide();
            $("#newsBlock").hide();
            $("#tenderBlock").hide();
            $("#feedbackBlock").hide();
            $("#imageBlock").toggle();
            $("#videoBlock").hide();    
            $("#imageUploadBlock").hide();
            $("#videoUploadBlock").hide();
           
        });
        $("#videoLink").click(function () {
            $("#pressBlock").hide();
            $("#newsBlock").hide();
            $("#tenderBlock").hide();
            $("#feedbackBlock").hide();
            $("#imageBlock").hide();
            $("#videoBlock").toggle();     
            $("#imageUploadBlock").hide();
            $("#videoUploadBlock").hide();
        });
        $("#imageUploadLink").click(function () {
            $("#pressBlock").hide();
            $("#newsBlock").hide();
            $("#tenderBlock").hide();
            $("#feedbackBlock").hide();
            $("#imageBlock").hide();
            $("#videoBlock").hide();
            $("#imageUploadBlock").toggle();
            $("#videoUploadBlock").hide();

        });
        $("#videoUploadLink").click(function () {
            $("#pressBlock").hide();
