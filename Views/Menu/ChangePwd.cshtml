@model Mahamesh.Models.OfficerLogin

@{
    ViewBag.Title = "Change Password";
}

<div class="container body-content" id="#maincontent" style="margin-bottom:150px;">
    <div class="headerDashboard">
        <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11 headerText">
            <h2>राजे यशवंतराव होळकर महामेष योजना</h2>
        </div>
        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1" style="text-align:right">
            <img src="~/Images/Raje.jpg" class="img-responsive" alt="Raje Yashwant Holkar" />
        </div>

    </div>
    <div class="panel panel-primary-2" style="box-shadow: 0 2px 2px rgba(0,0,0,.3);">
        <div class="panel-heading panel-primary-2">
            <h5 class="text-center">Change Password</h5>
        </div>
        <div class="panel-body">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">

                @using (Html.BeginForm("ChangePwd", "Menu", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group" style="padding-bottom:10px !important">
                        @Html.LabelFor(x => x.Username, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @readonly = "@readonly" })
                    </div>

                    <div class="form-group" style="padding-bottom:10px !important">
                        @Html.Label("Password", new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.ResetPwd, new { @class = "form-control", @type = "password", @required = "required" })
                    </div>
                    <div class="form-group" style="padding-bottom:10px !important">
                        @Html.Label("Confirm Password", new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.confirmpwd, new { @class = "form-control", @type = "password", @required = "required" })
                        <span id='message'></span>
                    </div>
                    <div id="pswd_info">
                        <h4>Password must meet the following requirements:</h4>
                        <ul>
                            <li id="letter" class="invalid">At least <strong>one letter</strong></li>
                            @*<li id="capital" class="invalid">At least <strong>one capital letter</strong></li>*@
                            <li id="number" class="invalid">At least <strong>one number</strong></li>
                            <li id="length" class="invalid">Be at least <strong>8 characters</strong></li>
                        </ul>
                    </div>
                    <button class="btn btn-sm btn-primary btn-block text-uppercase" type="submit">Change Password</button>

                }
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>
    <script src="/Content/Varsity/assets/js/jquery.min.js" type="text/javascript"></script>
    <script>
        $('#ResetPwd, #confirmpwd').on('keyup', function () {
            if ($('#ResetPwd').val() == $('#confirmpwd').val()) {
                $('#message').html('Matching').css('color', 'green');
            } else
                $('#message').html('Not Matching').css('color', 'red');
        });
    </script>

    <script type="text/javascript">
        //  $(document).ready(function () {

        $("#ResetPwd").keyup(function () {
            var pswd = $(this).val();
            //validate the length
            if (pswd.length < 8) {
                $('#length').removeClass('valid').addClass('invalid');
            } else {
                $('#length').removeClass('invalid').addClass('valid');
            }
            //validate letter
            if (pswd.match(/[A-z]/)) {
                $('#letter').removeClass('invalid').addClass('valid');
            } else {
                $('#letter').removeClass('valid').addClass('invalid');
            }

            ////validate capital letter
            //if (pswd.match(/[A-Z]/)) {
            //    $('#capital').removeClass('invalid').addClass('valid');
            //} else {
            //    $('#capital').removeClass('valid').addClass('invalid');
            //}

            //validate number
            if (pswd.match(/\d/)) {
                $('#number').removeClass('invalid').addClass('valid');
            } else {
                $('#number').removeClass('valid').addClass('invalid');
            }
        }).focus(function () {
            $('#pswd_info').show();
        }).blur(function () {
            $('#pswd_info').hide();
        });




       // });
    </script>
