
@{
    ViewBag.Title = @Mahamesh.App_LocalResources.Lang.Bilakhed;
}


<style>
    .div-header {
        text-align: center;
        font-size: 32px;
        color: #fff;
        font-weight: 700;
        /*height:40px;*/
        background: #65bff3;
        margin-bottom: 5px;
        font-variant-caps: all-petite-caps;
    }
</style>
<div class="container  body-content" id="#maincontent" style="margin-bottom:10%">
    <div class="div-header">@Mahamesh.App_LocalResources.Lang.Bilakhed</div>
    <section>
        <div class="panel panel-info">
            <div class="heading text-center"><h4>@Mahamesh.App_LocalResources.Lang.FarmInformation</h4></div>
            <div class="panel-body">
                <table class="table table-bordered table-responsive table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.Description</th>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.NameofFarm</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedNameofFarm</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.FarmAddress</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedFarmAddress</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.PhoneNumber</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedPhoneNumber</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.EmailID</td>
                            <td>
                                sgf.bilakhed@gmail.com
                            </td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.NameofFarmManager</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedNameofFarmManager</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.MobileNumber</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedMobileNumber</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.TotalLand</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedTotalLand</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.IrrigationLand</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedIrrigationLand</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.NonIrrigationLand</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedNonIrrigationLand</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.LandUnderBuilding</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedLandUnderBuilding</td>
                        </tr>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.AreaunderGrazing</td>
                            <td>@Mahamesh.App_LocalResources.Lang.BilakhedAreaunderGrazingPasture</td>
                        </tr>

                    </tbody>
                </table>
                <hr />
                <div class="heading">
                    <h4 class="text-center">@Mahamesh.App_LocalResources.Lang.LiveStockDetails</h4>
                </div>
                <table class="table table-bordered table-responsive table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.Breed</th>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.Male</th>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.Female</th>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.MaleKids</th>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.FemaleKids</th>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Mahamesh.App_LocalResources.Lang.BilakhedDeccaniSheep
                            </td>
                            <td>20</td>
                            <td>429</td>
                            <td>119</td>
                            <td>106</td>
                            <td>674</td>
                        </tr>
                    </tbody>
                </table>
                <hr />
                <div class="heading">
                    <h4 class="text-center">@Mahamesh.App_LocalResources.Lang.FacilitiesAvailable</h4>
                </div>   
                <table class="table table-bordered table-responsive table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.Facility</th>
                            <th class="text-center">@Mahamesh.App_LocalResources.Lang.Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Mahamesh.App_LocalResources.Lang.SupplyofBucks</td>
                            <td class="text-left">@Mahamesh.App_LocalResources.Lang.AmbajogaiSupplyDetail</td>
                        </tr>
                        <tr>
                            <td>Sheep and Goat Farming Training</td>
                            <td class="text-left">
                                Sheep & Goat Management Training Program is conducted at Sheep & Goat Development Farm in every month.
                                Fees: Rs. 500/- per trainee.
                                Duration: 3 days.

                            </td>
                        </tr>
                        <tr>
                            <td>Machine Shearing Program</td>
                            <td class="text-left">For improving the quality and quantity of wool of sheep, the machine shearing facility is providing to the sheep breeders by charging nominal cost. </td>
                        </tr>
                        <tr>
                            <td>Purchase of Wool</td>
                            <td class="text-left">Raw wool is purchased from shepherds at remunerative price and utilizes this wool for manufacturing of woolen products.</td>
                        </tr>
                        <tr>
                            <td>Production & Supply of Fodder Seed and Stumps of Perennial Grasses</td>
                            <td class="text-left">The Production and supply of fodder seeds and perennial fodder grasses by cultivating improved variety of fodder crops at the farm.     </td>
                        </tr>
                        <tr>
                            <td>Extension Activity</td>
                            <td class="text-left">Technical and scientific information of sheep and goat farming is providing to new entrepreneur by actively participating in agriculture/ livestock exhibition/fair/expo/ camps etc. </td>
                        </tr>
                        <tr>
                            <td>Sheep and Goat Unit Distribution</td>
                            <td class="text-left">Under various Government schemes, the Sheep & Goat unit is distributed to the farmers.</td>
                        </tr>
                        <tr>
                            <td>Demonstration and production of Azola</td>
                            <td class="text-left">At this farm Azola Cultivation unit has been established for demonstration to the farmers.</td>
                        </tr>
                        <tr>
                            <td>Fodder Plant Nursery </td>
                            <td class="text-left">To make available fodder plants for plantation which is useful in sheep and goat, fodder plant nursery is developed at farm. </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

