@model Mahamesh.Models.ApplicationListsViewModel
@{
    ViewBag.Title = "Applications List";
}
<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/1.5.6/css/buttons.dataTables.min.css" rel="stylesheet" />
<style>
    .tableheader {
        background: #1a9b83 !important;
        color: white;
        text-align: center;
        font-weight: bold;
    }

    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        padding: 5.5px;
        /* font-size: 13px; */
        line-height: 1.42857143;
        vertical-align: top;
        border-top: 1px solid #ddd;
    }
</style>

<div class="container-fluid" style="margin-bottom:150px;">
    <div class="panel panel-primary-2">
        <div class="panel-heading panel-primary-2 text-center"><h4>Applicant's List</h4></div>
        <div class="panel-body">
            <div class="row" style="padding-bottom:20px">
                <div class="col-lg-4"></div>
                <div class="col-lg-2">
                    <select class="form-control" id="reportType">
                        <option value="District">District-Wise</option>
                        <option value="Taluka">Taluka-Wise</option>
                        <option value="Component">Component-Wise</option>
                    </select>
                </div>
                <div class="col-lg-2 text-center">
                    <button class="btn btn-info" type="submit" id="btnView">View</button>
                </div>
                <div class="col-lg-4"></div>
            </div>
            <div class="row">
                <div id="divDistrict" style="display:none;border:1px solid #808080;padding:10px">
                    <table class="display table table-bordered table-striped table-responsive" id="tblDistrict" style="width:40% !important">
                        <thead>
                            <tr class="tableheader text-center">
                                <th>Sr.No.</th>
                                <th>District Name</th>
                                <th>District Code</th>
                                <th>Total Submitted</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ApplicantsListByDist != null)
                            {
                                for (int i = 0; i < Model.ApplicantsListByDist.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@Model.ApplicantsListByDist[i].DistrictName</td>
                                        <td>@Model.ApplicantsListByDist[i].DistrictCode</td>
                                        <td class="text-right">@Model.ApplicantsListByDist[i].CountByDistrict</td>
                                    </tr>

                                }
                                
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td>Total</td>
                                <td>@Model.ApplicantsListByDist.Sum(x => x.CountByDistrict)</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div id="divTaluka" style="display:none;border:1px solid #808080;padding:10px">
                    <table class="table table-bordered table-striped table-responsive" id="tblTaluka" style="width:50%;margin-left:23%">
                        <thead>
                            <tr class="tableheader text-center">
                                <th>Sr.No.</th>
                                <th>District Name</th>
                                <th>District Code</th>
                                <th>Taluka Name</th>
                                <th>Taluka Code</th>
                                <th>Total Submitted</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ApplicantsListByTal != null)
                            {
                                for (int i = 0; i < Model.ApplicantsListByTal.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@Model.ApplicantsListByTal[i].DistrictName</td>
                                        <td>@Model.ApplicantsListByTal[i].DistrictCode</td>
                                        <td>@Model.ApplicantsListByTal[i].TalukaName</td>
                                        <td>@Model.ApplicantsListByTal[i].TalukaCode</td>
                                        <td class="text-right">@Model.ApplicantsListByTal[i].CountByTaluka</td>
                                    </tr>

                                }
                               
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-center">Total</td>
                                <td class="text-right">@Model.ApplicantsListByTal.Sum(x => x.CountByTaluka)</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div id="divComponent" style="display:none;border:1px solid #808080;padding:10px">
                    <table class="table table-bordered table-striped table-responsive" id="tblComponent">
                        <thead>
                            <tr class="tableheader text-center" style="font-size:10px">
                                <th width="1%">Sr.No.</th>
                                <th>District Name</th>
                                <th width="1%">District Code</th>
                                <th>Taluka Name</th>
                                <th width="1%">Taluka Code</th>
                                <th width="1%">Total Submitted</th>
                                <th>C1</th>
                                <th>C2</th>
                                <th>C3</th>
                                <th>C4</th>
                                <th>C5</th>
                                <th>C6</th>
                                <th>C7</th>
                                <th>C8</th>
                                <th>C9</th>
                                <th>C10</th>
                                <th>C11</th>
                                <th>C12</th>
                                <th>C13</th>
                                <th>C14</th>
                                <th>C15</th>
                                <th>Total(Comp)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ApplicantsListByComp != null)
                            {
                                for (int i = 0; i < Model.ApplicantsListByComp.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@Model.ApplicantsListByComp[i].DistrictName</td>
                                        <td>@Model.ApplicantsListByComp[i].DistrictCode</td>
                                        <td>@Model.ApplicantsListByComp[i].TalukaName</td>
                                        <td>@Model.ApplicantsListByComp[i].TalukaCode</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByTaluka</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent1</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent2</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent3</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent4</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent5</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent6</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent7</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent8</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent9</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent10</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent11</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent12</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent13</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent14</td>
                                        <td class="text-right">@Model.ApplicantsListByComp[i].CountByComponent15</td>
                                        <td>@(Model.ApplicantsListByComp[i].CountByComponent1+ Model.ApplicantsListByComp[i].CountByComponent2 + Model.ApplicantsListByComp[i].CountByComponent3 + Model.ApplicantsListByComp[i].CountByComponent4 + Model.ApplicantsListByComp[i].CountByComponent5 + Model.ApplicantsListByComp[i].CountByComponent6 + Model.ApplicantsListByComp[i].CountByComponent7 + Model.ApplicantsListByComp[i].CountByComponent14 + Model.ApplicantsListByComp[i].CountByComponent8 + Model.ApplicantsListByComp[i].CountByComponent9 + Model.ApplicantsListByComp[i].CountByComponent15 + Model.ApplicantsListByComp[i].CountByComponent10 + Model.ApplicantsListByComp[i].CountByComponent11 + Model.ApplicantsListByComp[i].CountByComponent12 + Model.ApplicantsListByComp[i].CountByComponent13 )</td>
                                    </tr>

                                }
                               
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-center">Total</td>

                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent1)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent2)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent3)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent4)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent5)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent6)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent7)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent8)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent9)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent10)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent11)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent12)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent13)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent14)</td>
                                <td class="text-right">@Model.ApplicantsListByComp.Sum(x => x.CountByComponent15)</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <div class="panel-footer text-center">
            <a href="@Url.Action("AdminPanel", "Menu")" class="btn btn-info">Back to Admin Panel</a>
        </div>
    </div>
</div>
<script src="/Content/Varsity/assets/js/jquery.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.flash.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js" type="text/javascript"></script>
<script>

    $("#btnView").click(function () {
        var report = $("#reportType").val();
        if (report == "District") {
            $("#divDistrict").show();
            $("#divTaluka").hide();
            //  $("#tblTaluka_info").hide();
            //  $("#tblTaluka_paginate").hide();
            //  $("#tblTaluka_wrapper").hide();
            $("#divComponent").hide();
            //  $("#tblComponent_info").hide();
            // $("#tblComponent_paginate").hide();
            // $("#tblComponent_wrapper").hide();
        }
        else if (report == "Taluka") {
            $("#divDistrict").hide();
            // $("#tblDistrict_info").hide();
            // $("#tblDistrict_wrapper").hide();

            // $("#tblDistrict_paginate").hide();
            $("#divTaluka").show();
            $("#divComponent").hide();
            // $("#tblComponent_info").hide();
            // $("#tblComponent_paginate").hide();
            // $("#tblComponent_length").hide();
            //$("#tblComponent_length").hide();

        }
        else if (report == "Component") {
            //$("#tblDistrict_info").hide();
            //$("#tblDistrict_paginate").hide();
            $("#divDistrict").hide();
            // $("#tblDistrict_wrapper").hide();
            $("#divTaluka").hide();
            //  $("#tblTaluka_info").hide();
            // $("#tblTaluka_paginate").hide();
            //  $("#tblTaluka_wrapper").hide();
            $("#divComponent").show();

        }
        else {
            return false;
        }
    });



</script>
<script>
    $('#tblDistrict').DataTable({
        dom: 'Bfrtip',
        buttons: [
            { extend: 'copyHtml5', footer: true },
            { extend: 'excelHtml5', footer: true },
            { extend: 'csvHtml5', footer: true },
            { extend: 'pdfHtml5', footer: true },
            { extend: 'print', footer: true }
        ],
        "paging": false
    });
    $('#tblTaluka').DataTable({
        dom: 'Bfrtip',
        buttons: [
            { extend: 'copyHtml5', footer: true },
            { extend: 'excelHtml5', footer: true },
            { extend: 'csvHtml5', footer: true },
            { extend: 'pdfHtml5', footer: true },
            { extend: 'print', footer: true }
        ],
        "paging": false
    });
    $('#tblComponent').DataTable({
        dom: 'Bfrtip',
        buttons: [
            { extend: 'copyHtml5', footer: true },
            { extend: 'excelHtml5', footer: true },
            { extend: 'csvHtml5', footer: true },
            { extend: 'pdfHtml5', footer: true },
            { extend: 'print', footer: true }
        ],
        "paging": false
    });
</script>
